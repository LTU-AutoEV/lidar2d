<?xml version="1.0"?>
<launch>

  <node name="costmap_node" pkg="costmap_2d" type="costmap_2d_node" output="screen" >
    <rosparam file="$(find lidar2d)/config/costmap_params.yaml" command="load" ns="costmap" />
  </node>
  <node name="cm_map_server" pkg="map_server" type="map_server" output="screen" args="$(find lidar2d)/config/map.yaml" />

  <node name="cm_rviz1" pkg="rviz" type="rviz" args="-d $(find lidar2d)/rviz/costmap.rviz" />

  <node name="cm_robot_static_tf" pkg="tf" type="static_transform_publisher"  args="0 0 0 0 0 0 map base_link  100" /> 
</launch>
